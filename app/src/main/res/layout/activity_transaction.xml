<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akinadeibrahim.test.TransactionActivity">

       <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@drawable/boltons"
           android:id="@+id/appCompatImageView" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appCompatImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="WELCOME TO TRANSACTION PAGE"
        android:textAlignment="center"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonPay"
        android:layout_alignLeft="@+id/editTextAmount"
        android:layout_alignStart="@+id/editTextAmount"
        android:layout_marginBottom="54dp"
        android:text="Enter Amount"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editTextAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonPay"

        android:textAlignment="center" />

    <Button
        android:id="@+id/buttonPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="158dp"
        android:text="Pay Now" />

</RelativeLayout>
